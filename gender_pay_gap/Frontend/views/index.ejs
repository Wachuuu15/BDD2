    <title>Gender Pay Gap</title>
    
    <style>
        body{
            background-color: #f6e5cb;
        }
        .container{
            margin-top: 10px;
            max-width: 960px;
        }

        .container-title-info{
            display: flex;
            justify-content: center;

            margin-bottom: 10px;
        }

        .navbar{
            background-color: #d76483;
        }

        .btnContainer{
            margin-top: 20px;
            margin-bottom: 20px;

            display: flex;
            justify-content: center;
        }

        .btn-save {
            padding: 5px 10px; /* Agrega padding de 5px arriba y abajo, y 10px a los lados */
        }

        .bi-save {
            margin-right: 10px; /* Añade 5px de margen a la derecha de la figura */
        }

        .row{
            margin-bottom: 10px;
        }

        .form-label{
            margin-bottom: 0px;
        }

        .dropdown-menu {
            margin-left: -50px; 
        }

        .btn-save{
            background-color: #ef9ca4;
            width: 200px;
        }

        .btn-save:hover{
            background-color: #a3a09f;
            color: #d76483;
            font-weight: bold;
        }
