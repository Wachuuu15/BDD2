    <title>Employer Information</title>
    <style>
        body{
          background-color: #e4ddd2;
          width: 100%;
          margin: 0;
        }
        .container{
          margin-top: 10px;
          width: 100%;
          margin-left: 10px;
        }

        .navbar{
          background-color: #d89db5;
          width:100%;
        }

        .btn{
          margin-top: 15px;
        }

        .btnContainer{
          width: 100%;
          
          display: flex;
          justify-content: center;
        }

    </style>
  </head>
  <body>

    <div class="container">
        <div class="container-title-info"></div>
            <h1>Employer Information</h1>

            <table id="tableEmployer" class="table table-hover">
                <thead>
                    <tr>
                        <th style = "display: none;">ID</th>
                        <th>Employer Name</th>
                        <th>Address</th>
                        <th>Post code</th>
                        <th>dif % In Mean Hourly Wage</th>
                        <th>dif % In Median Hourly Wage</th>
                        <th>dif % In Mean Bonus Received</th>
                        <th>dif % In Median Bonus Received</th>
                        <th>% Males Received Bonus</th>
                        <th>% Females Received Bonus</th>
                        <th>Proportion Males In Lower Quartile</th>
                        <th>Proportion Females In Lower Quartile</th>
                        <th>Proportion Males In Lower Middle Quartile</th>
                        <th>Proportion Females In Lower Middle Quartile</th>
                        <th>Proportion Males In Upper Middle Quartile</th>
                        <th>Proportion Females In Upper Middle Quartile</th>
                        <th>Proportion Males In Top Quartile</th>
                        <th>Proportion Females In Top Quartile</th>
                        <th>Link to Company GPG</th>
                        <th>Responsible Person</th>
                        <th>Employer size</th>
                        <th>Current Name</th>
                        <th>Submitted After The Deadline</th>
                        <th>Company ID</th>
                    </tr>
               
                </thead>

                <tbody>
                    <% if (employers.length === 0) { %>
                        <tr>
                            <td colspan="25">No hay empleadores disponibles.</td>
                        </tr>
                    <% } else { %>
                        <% console.log(employers); %>
                        <% employers.forEach((employer) => { %>
                            <tr>
                                <td style = "display: none;"><%= employer['_id'] %></td>
                                <td><%= employer['Employer Name'] %></td>
                                <td><%= employer['Address'] %></td>
                                <td><%= employer['Postcode'] %></td>
                                <td><%= employer['Percent Difference in Mean Hourly Wage'] %></td>
                                <td><%= employer['Percent Difference in Median Hourly Wage'] %></td>
                                <td><%= employer['Percent Difference in Mean Bonus Received'] %></td>
                                <td><%= employer['Percent Difference in Median Bonus Received'] %></td>
                                <td><%= employer['Percentage of Males that Received a Bonus'] %></td>
                                <td><%= employer['Percentage of Females that Received a Bonus'] %></td>
                                <td><%= employer['Proportion of Males in Lower Quartile'] %></td>
                                <td><%= employer['Proportion of Females in Lower Quartile'] %></td>
                                <td><%= employer['Proportion of Males in Lower Middle Quartile'] %></td>
                                <td><%= employer['Proportion of Females in Lower Middle Quartile'] %></td>
                                <td><%= employer['Proportion of Males in Upper Middle Quartile'] %></td>
                                <td><%= employer['Proportion of Females in Upper Middle Quartile'] %></td>
                                <td><%= employer['Proportion of Males in Top Quartile'] %></td>
                                <td><%= employer['Proportion of Females in Top Quartile'] %></td>
                                <td><%= employer['Company Link To GPG Info'] %></td>
                                <td><%= employer['Responsible Person'] %></td>
                                <td><%= employer['Employer Size'] %></td>
                                <td><%= employer['Current Name'] %></td>
                                <td><%= employer['Submitted After The Deadline']%></td>
                                <td><%= employer['company_id'] %></td>
                                <td>
                                    <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                                    <a href="/borrar/<%= employer['_id'] %>" class="btn btn-outline-danger bi bi-trash"></a>
                                </td> 
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>

            <!-- Button trigger modal -->
    <div class="btnContainer">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Launch static backdrop modal
      </button> 
    </div>
    
  <!-- Modal -->
  <div id = "modalEmployer" class= "modal fade" tabindex="-1" aria-labelledby="modalEmployer" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit Employer</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/editar" method="POST">
            <input type="text" name="id_editar" id="id_editar" hidden>
            <div class="mb-3">
              <label for = "name-edit" class="col-form-label">Employer Name</label>
              <input id="name-edit" name="name-edit" type="text" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "address-edit" class="col-form-label">Address</label>
              <input id="address-edit" name="address-edit" type="text" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "post-edit" class="col-form-label">Post Code</label>
              <input id="post-edit" name="post-edit" type="text" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "meanh-edit" class="col-form-label">dif % In Mean Hourly Wage</label>
              <input id="meanh-edit" name="meanh-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "medianh-edit" class="col-form-label">dif % In Median Hourly Wage</label>
              <input id="medianh-edit" name="medianh-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "meanb-edit" class="col-form-label">dif % In Mean Bonus Received</label>
              <input id="meanb-edit" name="meanb-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "medianb-edit" class="col-form-label">dif % In Median Bonus Received</label>
              <input id="medianb-edit" name="medianb-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "malesr-edit" class="col-form-label">% Males Received Bonus</label>
              <input id="malesr-edit" name="malesr-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "femalesr-edit" class="col-form-label">% Females Received Bonus</label>
              <input id="femalesr-edit" name="femalesr-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propmalesl-edit" class="col-form-label">Proportion Males In Lower Quartile</label>
              <input id="propmalesl-edit" name="propmalesl-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propfemalesl-edit" class="col-form-label">Proportion Females In Lower Quartile</label>
              <input id="propfemalesl-edit" name="propfemalesl-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propfemaleslm-edit" class="col-form-label">Proportion Females In Lower Middle Quartile</label>
              <input id="propfemaleslm-edit" name="propfemaleslm-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propmaleslm-edit" class="col-form-label">Proportion Males In Lower Middle Quartile</label>
              <input id="propmaleslm-edit" name="propmaleslm-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propmalesup-edit" class="col-form-label">Proportion Males In Upper Middle Quartile</label>
              <input id="propmalesup-edit" name="propmalesup-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propfemalesup-edit" class="col-form-label">Proportion Females In Upper Middle Quartile</label>
              <input id="propfemalesup-edit" name="propfemalesup-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propmalestop-edit" class="col-form-label">Proportion Males In Top Quartile</label>
              <input id="propmalestop-edit" name="propmalestop-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "propfemalestop-edit" class="col-form-label">Proportion Females In Top Quartile</label>
              <input id="propfemalestop-edit" name="propfemalestop-edit" type="number" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "link-edit" class="col-form-label">Link to Company GPG</label>
              <input id="link-edit" name="link-edit" type="text" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "resp-edit" class="col-form-label">Responsible Person</label>
              <input id="resp-edit" name="resp-edit" type="text" class="form-control" value="">
            </div>
            <div class="mb-3">
              <label for = "resp-edit" class="col-form-label">Responsible Person</label>
              <input id="resp-edit" name="resp-edit" type="text" class="form-control" value="">
            </div>

          </form>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Understood</button>
        </div>
      </div>
    </div>
  </div>
  </body>
</html>